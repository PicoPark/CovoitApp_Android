<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:frisson="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:orientation="vertical"
        android:paddingEnd="30dp"
        android:paddingStart="50dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="20dp"
            android:background="@drawable/circle"
            android:elevation="5dp"
            android:src="@drawable/user"
            frisson:cardCornerRadius="50dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_add"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/Exodus"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/dashboard_tv_prenom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="102dp"
                    android:layout_marginTop="11dp"
                    android:text="PrÃ©nom"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/dashboard_tv_nom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/dashboard_tv_prenom"
                    android:layout_toEndOf="@+id/dashboard_tv_prenom"
                    android:paddingStart="5dp"
                    android:text="Nom"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/dashboard_tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="41dp"
                    android:text="06 68 20 71 58"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/dashboard_tv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/dashboard_tv_phone"

                    android:layout_marginTop="79dp"
                    android:text="prenom.nom@mail.com"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="-102dp"
                    android:layout_marginTop="169dp"
                    android:layout_toStartOf="@+id/dashboard_tv_prenom"
                    android:text="Votre voiture "
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/dashboard_tv_voiture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="-102dp"
                    android:layout_toStartOf="@+id/dashboard_tv_prenom"
                    android:text="Clio II"
                    android:textColor="@android:color/white" />


                <Button
                    android:id="@+id/bt_go"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="109dp"
                    android:background="@drawable/btn_shape3"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:text="Modifier"
                    android:textColor="#ffffff" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <ImageButton
        android:id="@+id/dashboard_btn_message"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_margin="14dp"
        android:background="@drawable/circle_transparent"
        android:contentDescription="@string/depart"
        android:src="@android:drawable/ic_dialog_email"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="426dp" />

    <ImageButton
        android:id="@+id/dashboard_btn_reservation"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_margin="14dp"
        android:background="@drawable/circle_transparent"
        android:contentDescription="@string/depart"
        android:scaleType="fitCenter"
        android:src="@drawable/car"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="426dp" />

    <ImageView
        android:id="@+id/dashboard_notif"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@android:drawable/ic_notification_overlay"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="421dp" />

    <ImageButton
        android:id="@+id/dashboard_btn_add"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_margin="14dp"
        android:background="@drawable/circle_transparent"
        android:contentDescription="@string/depart"
        android:src="@android:drawable/ic_menu_add"
        tools:layout_editor_absoluteX="221dp"
        tools:layout_editor_absoluteY="426dp" />


    <ImageButton
        android:id="@+id/dashboard_btn_search"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_margin="14dp"
        android:background="@drawable/circle_transparent"
        android:contentDescription="@string/depart"
        android:src="@android:drawable/ic_menu_search"
        tools:layout_editor_absoluteX="312dp"
        tools:layout_editor_absoluteY="426dp" />



</android.support.constraint.ConstraintLayout>